echo "Installer started..."

#main
apt update
apt install wget
apt install curl
chmod +x download-from-google

#git
echo"Install git..."
apt install git-all

#nodejs
echo "Install nodejs..."
apt install nodejs
node -v

#skype
echo "Install skype..."
wget https://go.skype.com/skypeforlinux-64.deb
apt install ./skypeforlinux-64.deb

#chrome
echo "Install chrome..."
apt install google-chrome-stable

#vscode
echo "Install vscode..."
apt install software-properties-common apt-transport-https
wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > packages.microsoft.gpg
install -o root -g root -m 644 packages.microsoft.gpg /etc/apt/trusted.gpg.d/
sh -c 'echo "deb [arch=amd64 signed-by=/etc/apt/trusted.gpg.d/packages.microsoft.gpg] https://packages.microsoft.com/repos/vscode stable main" > /etc/apt/sources.list.d/vscode.list'
apt update
apt install code

#sfdx
echo "Install sfdx..."
wget https://developer.salesforce.com/media/salesforce-cli/sfdx/channels/stable/sfdx-linux-x64.tar.xz
mkdir ~/sfdx
tar xJf sfdx-linux-x64.tar.xz -C ~/sfdx --strip-components 1

#flameshot
echo "Install flameshot..."
apt install flameshot

#cs
echo "Install cs..."
./download-from-google "1QyD9qxj0_aFKGI7UdmG34aI51jCe99GP" "TEST.tar.gz"
tar xzf TEST.tar.gz -C /home

#zoom
echo "Install zoom..."
wget https://zoom.us/client/latest/zoom_amd64.deb
apt install ./zoom_amd64.deb

#idea
echo "Install idea..."
./download-from-google "1nMCyA13W8DQuZVzN080cmy84hDHaHJo5" "ideaIU-2021.2.3.tar.gz"
tar xzf ideaIU-2021.2.3.tar.gz -C /home

#illuminated cloud
echo "Download illuminated cloud..."
./download-from-google "197ERNBHX5Xdd8JFbecGa-iJ-wuMDZW7S" "IlluminatedCloud2.zip"

echo "Installation completed!"
echo "To crack IntelliJ IDEA open it, close and after run script:"
echo "yes | ./idea-crack"
echo "To install Illuminated cloud, open IDEA, Ctrl + Alt + S > Plugins > click gear > Install Plugin from Disk... > Select tle plugin archive file."